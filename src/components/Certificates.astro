---
import CertificatesCard from "./CertificatesCard.astro";
import { getI18N } from "@/i18n";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<section class="certificates">
  <h1 class="certificates_title">{i18n.basics.certificates.toUpperCase()}</h1>
  <div class="certificates_container">
    {
      i18n.education.map((education, index) => (
        <CertificatesCard
          i={index}
          studyType={education.studyType}
          institution={education.institution}
          startDate={education.startDate}
          endDate={education.endDate}
        />
      ))
    }
  </div>
</section>

<style>
  .certificates {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .certificates_title {
    padding: 1rem;
    font-size: 1.5rem;
    font-weight: 900;
    letter-spacing: 0.1rem;
    margin-top: 2rem;
    margin-bottom: 1rem;
    color: var(--primary);
  }
  .certificates_container {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    width: 60%;
  }
  @media (max-width: 480px) {
    .certificates_container {
      width: 90%;
    }
  }
</style>
