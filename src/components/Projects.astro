---
import ProjectCard from "./ProjectCard.astro";

import { getI18N } from "@/i18n";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<section class="projects">
  <h1 class="project_title">{i18n.basics.projects.toUpperCase()}</h1>
  <div class="projects_container">
    {
      i18n.projects.map((project) => (
        <ProjectCard
          title={project.name}
          description={project.description}
          gitHref={project.url}
          tech={project.tech}
        />
      ))
    }
  </div>
</section>

<style>
  .projects {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .project_title {
    padding: 1rem;
    font-size: 1.5rem;
    font-weight: 900;
    letter-spacing: 0.1rem;
    margin-bottom: 1rem;
    color: var(--primary);
  }
  .projects_container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    justify-items: center;
  }

  @media (max-width: 480px) {
    .project_title {
      margin-left: 0;
    }

    .projects_container {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      gap: 2rem;
    }
  }
</style>
